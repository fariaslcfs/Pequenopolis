<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Texto explicativo -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:justificationMode="inter_word"
            android:text="@string/texto_explicativo"
            android:textSize="18sp"
            android:lineSpacingExtra="4dp"
            android:fontFamily="@font/font9"
            android:textColor="#263238" />



        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#42A5F5"
            android:layout_marginBottom="16dp"/>

        <!-- Rótulo para o site -->
        <TextView
            android:id="@+id/tvUrlLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/site"
            android:textSize="17sp"
            android:textColor="#1E88E5"
            android:textStyle="bold" />

        <!-- Campo do site -->
        <EditText
            android:id="@+id/edtUrl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:hint="@string/site_para_monitorar"
            android:inputType="textUri"
            android:textColor="#212121"
            android:textColorHint="#9E9E9E" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B3E5FC"
            android:layout_marginVertical="20dp"/>

        <!-- Rótulo para intervalo -->
        <TextView
            android:id="@+id/tvIntervalLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/intervalo_em_minutos"
            android:textSize="17sp"
            android:textColor="#1E88E5"
            android:textStyle="bold" />

        <!-- Campo intervalo -->
        <EditText
            android:id="@+id/edtInterval"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:hint="@string/intervalo_minutos"
            android:inputType="number"
            android:textColor="#212121"
            android:textColorHint="#9E9E9E" />

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/chkContinuousBeep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/bipe_continuo"
            android:textColor="#37474F" />

        <!-- Botão com gradiente -->
        <Button
            android:id="@+id/btnStartStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:padding="16dp"
            android:text="@string/iniciar_monitoramento"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button" />

        <ImageView
            android:id="@+id/imgIllustration"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/luizinho" />

    </LinearLayout>
</ScrollView>
